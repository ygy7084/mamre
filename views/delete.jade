doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/member') 회원관리
    ul
      each member in members
        li
          a(href='/member/'+member.phone)= member.phone
    artcle
      if member
        h2
          회원정보삭제
        p
          ='ID= '+member.ID
        p
          ='전화번호= '+member.phone
        p
          ='포인트= '+member.point
    artcle
      h1= 'Delete? '+member.phone
      form(action='/member/'+member.phone+'/delete' method='post')
        p
          input(type='submit' value='삭제')
      a(href='/member/'+member.phone) 아니오
